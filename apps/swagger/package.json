{
  "name": "meta-cloud-api-swagger",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "node dist/src/app.js",
    "build": "pnpm run schemas:openapi && pnpm run copyfiles && tsc",
    "dev": "pnpm run schemas:openapi && pnpm run copyfiles && concurrently \"tsc -w\" \"nodemon dist/src/app.js\"",
    "schemas:openapi": "mkdir -p src/schemas && swagger-jsdoc -d src/routes/definition.yaml \"src/routes/**/*.ts\" \"src/routes/**/*.yaml\" -o src/schemas/openapi.json",
    "copyfiles": "copyfiles -u 1 src/schemas/*.json dist",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.6",
    "meta-cloud-api": "workspace:*",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^16.11.7",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.7",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
