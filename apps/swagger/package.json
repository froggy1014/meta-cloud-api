{
  "name": "meta-cloud-api-swagger",
  "version": "1.0.0",
  "description": "",
  "main": "dist/api/index.js",
  "scripts": {
    "start": "node dist/api/index.js",
    "build": "pnpm run schemas:openapi && pnpm run copyfiles && tsc",
    "dev": "pnpm run schemas:openapi && copyfiles ./openapi.json dist && concurrently \"tsc -w\" \"nodemon dist/api/index.js\"",
    "schemas:openapi": "swagger-jsdoc -d ./core/*.yaml ./endpoint/*.yaml ./response/*.yaml -o ./openapi.json",
    "copyfiles": "copyfiles ./openapi.json dist",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^16.11.7",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.7",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
