{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "typeRoots": ["./node_modules/@types"],
      "types": ["node", "express"]
    },
    "include": ["src/**/*", "api/**/*"],
    "exclude": ["node_modules", "dist"]
  }