# =================================
# SERVER CONFIGURATION
# =================================

# Server port (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# =================================
# WHATSAPP CLOUD API
# =================================

# WhatsApp Cloud API Access Token
# Get it from: https://developers.facebook.com/apps > Your App > WhatsApp > API Setup
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# WhatsApp Phone Number ID
# Get it from: https://developers.facebook.com/apps > Your App > WhatsApp > API Setup
WHATSAPP_PHONE_NUMBER_ID=123456789012345

# WhatsApp Business Account ID
# Get it from: https://developers.facebook.com/apps > Your App > WhatsApp > API Setup
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789012345

# Webhook Verification Token (choose any random string)
# This must match the value you set in Meta App Dashboard webhook configuration
WHATSAPP_WEBHOOK_VERIFICATION_TOKEN=your_webhook_verification_token

# =================================
# DATABASE
# =================================

# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Local example: postgresql://postgres:postgres@localhost:5432/whatsapp_bot?schema=public
# Production example: postgresql://user:password@db-host.com:5432/production_db?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_bot?schema=public

# =================================
# REDIS
# =================================

# Redis URL for session storage and queue management
# Local example: redis://localhost:6379
# Production example: redis://:password@redis-host.com:6379
REDIS_URL=redis://localhost:6379

# Redis key prefix (optional, default: whatsapp:)
REDIS_KEY_PREFIX=whatsapp:

# =================================
# QUEUE CONFIGURATION
# =================================

# Queue name prefix (optional, default: whatsapp)
QUEUE_PREFIX=whatsapp

# Default job attempts (number of retries on failure)
QUEUE_ATTEMPTS=3

# Default job backoff delay in milliseconds
QUEUE_BACKOFF_DELAY=5000

# =================================
# SESSION CONFIGURATION
# =================================

# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Session cleanup interval in milliseconds (default: 600000 = 10 minutes)
SESSION_CLEANUP_INTERVAL=600000

# =================================
# RATE LIMITING
# =================================

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window per IP (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# LOGGING
# =================================

# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=json

# =================================
# SECURITY
# =================================

# CORS allowed origins (comma-separated)
# Example: https://example.com,https://admin.example.com
# Use * for development only (not recommended for production)
CORS_ORIGIN=*

# Helmet configuration (true/false)
HELMET_ENABLED=true

# =================================
# NOTIFICATION SETTINGS
# =================================

# Support team notification phone number (for ticket alerts)
# Format: International format without + (e.g., 14155552671)
SUPPORT_TEAM_PHONE=your_support_phone_number

# Notification delays in milliseconds
TICKET_CREATED_NOTIFICATION_DELAY=0
TICKET_REMINDER_NOTIFICATION_DELAY=86400000

# =================================
# BUSINESS SETTINGS
# =================================

# Business name (appears in messages)
BUSINESS_NAME=Your Company Name

# Business hours (for auto-responses)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00

# Timezone (IANA timezone identifier)
TIMEZONE=America/New_York

# =================================
# FEATURE FLAGS
# =================================

# Enable/disable features (true/false)
ENABLE_ANALYTICS=true
ENABLE_AUTO_REPLIES=true
ENABLE_TICKET_REMINDERS=true
ENABLE_HEALTH_CHECKS=true
